

<div class = "container">
    <div class = "new_room_reservate_page">
        <h2>ルーム登録</h2>
        
        <%= form_with model: @room do |f| %>
        
        <table class = "new_room_reservate_table">
            <tr class = "reservate_row">
                <th><%= f.label :room_name, class: "reservate_label" %><div class = "required-icon">必須</div></th>
                <td><%= f.text_field :room_name, :placeholder => "ルーム名を入力", class: "reservate_field" %></td>
            </tr>
                
            <tr class = "reservate_row">
                <th><%= f.label :body, class: "reservate_label" %><div class = "required-icon">必須</div></th>
                <td><%= f.text_area :body, :placeholder => "ルーム説明を入力", class: "reservate_field" %></td>
            </tr>
            
            <tr class = "reservate_row">
                <th><%= f.label :price, class: "reservate_label" %><div class = "required-icon">必須</div></th>
                <td><%= f.text_field :price, :placeholder => "一日あたりの料金を入力", class: "reservate_field" %></td>
            </tr>
            
            <tr class = "reservate_row">
                <th><%= f.label :address, class: "reservate_label" %><div class = "required-icon">必須</div></th>
                <td><%= f.text_field :address, :placeholder => "住所を入力", class: "reservate_field" %></td>
            </tr>
            
            <tr class = "reservate_row">
                <th><%= f.label :image, class: "reservate_label" %><div class = "required-icon">必須</div></th>
                <td><%= f.attachment_field :image, class: "reservate_field" %></td>
            </tr>
        </table>
        
        <ul>
            <li><%= f.submit "登録する" %></li>
        </ul>
        
        <% end %>
    </div>
</div>

