<div class = "room-show-container container">
    <div class = "room-show-info">
        <div class = "room_image_show"><%= attachment_image_tag @room, :image, size: "988x737", fallback: "area_no_image.png" %></div>
        <div class = "room_name-show"><%= @room.room_name %></div>
        <div class = "address-show"><%= @room.address %></div>
        <div class = "body-show"><%= @room.body %></div>
    </div>
    <div class = "room-show-reservate">
        <div>
            <span>¥</span>
            <%= @room.price %>
            <span>/ 日</span>
        </div>
        <%= form_with(model:[@room, @room.reservations.new], url: room_confirm_path(@room), local: true) do |f| %>
            <%= f.hidden_field :room_id, value: @room.id %>
            
            <div class = "room-show-row">
                <%= f.label "開始日" %>
                <%= f.date_field :start_date %>
            </div>
            
            <div class = "room-show-row">
                <%= f.label "終了日" %>
                <%= f.date_field :end_date %>
            </div>
            
            <div class = "room-show-row">
                <%= f.label "人数" %>
                <%= f.number_field :person %>
            </div>
            
            <ul>
                <li><%= f.submit "この日程で予約する", class: "room-reserve-btn" %></li>
            </ul>
            
        <% end %>
    </div>
</div>
