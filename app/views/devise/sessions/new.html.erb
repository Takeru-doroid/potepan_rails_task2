<div class = "container">
  <div class = "sign_in_page">
    <h2>ログイン</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class = "required-icon">必須</div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %>
      </div>
    
      <div class="field">
        <div class = "required-icon">必須</div>
        <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワード" %>
      </div>
    
      <div class="actions">
        <%= f.submit "ログイン", class: "login-form-button" %>
      </div>
    <% end %>
    
    <%= link_to "新しいアカウントを作成", new_user_registration_path %>
  </div>
</div>
