<h2>ユーザー一覧</h2>

<% @users.each do |user| %>
    <table>
        <tr>
            <th>ユーザー名</th>
            <td>
                <%= link_to user_path(user) do %>
                    <%= user.username %>
                <% end %>
            </td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td>
                <%= link_to user_path(user) do %>
                    <%= user.email %>
                <% end %>
            </td>
        </tr>
    </table>
<% end %>